{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@portfolio/*": ["src/ui/*", "app/*"],
            "@portfolio/api*": ["pages/api/v1*"],
            "@portfolio/hooks/*": ["src/hooks/*"],
            "@portfolio/lib/*": ["src/lib/*"],
            "@portfolio/providers/*": ["src/providers/*"],
            "@portfolio/utils/*": ["src/utils/*"]
        },
        "target": "ES2016",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
